@model IEnumerable<EmployeeMangmentSystem.Repository.Models.Templates>


@{
    ViewBag.Title = "Templates";
}


<div class="x_panel">
    <div class="x_title">
        <h2>
            @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
            {
                @ViewBag.Title
            }
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="col-md-1">

                <p>
                    <a class="btn btn-success glyphicon glyphicon-plus" href="@Url.Action("Create","Template")"></a>

                </p>
            </div>
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <p>
                    <a class="btn btn-success glyphicon glyphicon-file" type="submit" target="_blank" href="@Url.Action("Print","Template", new { target = "_blank" })"></a>

                </p>
            </div>
        </div>
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th style="text-align:center">
                        @Html.DisplayNameFor(model => model.TemplateType)
                    </th>*@
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.TemplateContent)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>


                    <th style="text-align:center">Edit</th>
                    <th style="text-align:center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.TemplateType)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.TemplateContent)
                            @*<script>CKEDITOR.replace("content")</script>*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>


                        <td style="text-align:center">
                            <a class="btn btn-info glyphicon glyphicon-edit" href="@Url.Action("Edit","Template",new { id = @item.Id})"></a>
                        </td>
                        <td style="text-align:center">
                            <a class="btn btn-danger glyphicon glyphicon-trash delete-prompt" id="@item.Id" data-toggle="modal" data-target="#exampleModalCenter" data-whatever="@item.Name"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    var deleteUrl = '@Url.Action("DeleteConfirm", "Template")';
</script>

