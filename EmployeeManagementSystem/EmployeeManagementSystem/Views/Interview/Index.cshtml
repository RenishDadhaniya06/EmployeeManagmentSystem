@model IEnumerable<EmployeeMangmentSystem.Repository.Models.ViewModel.DisplayInterviewModel>

@{
    ViewBag.Title = "Interviews";
}

<div class="x_panel">
    <div class="x_title">
        <h2>
            @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
            {
                @ViewBag.Title
            }
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <div class="row">
            <div class="col-md-1">

                <p>
                    <a class="btn btn-success glyphicon glyphicon-plus" href="@Url.Action("Create","Interview")"></a>
                </p>
            </div>
            <div class="col-md-10"></div>
            <div class="col-md-1">
                <p>
                    <a class="btn btn-success glyphicon glyphicon-file" type="submit" target="_blank" href="@Url.Action("Print","Interview", new { target = "_blank" })"></a>

                </p>
            </div>
        </div>
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Candidate)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Employee)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.ScheduleTime)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.InterviewStatus)
                    </th>

                    <th style="text-align:center">Edit</th>
                    <th style="text-align:center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Candidate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee)
                        </td>
                        <td>
                            @{ 
                                string time = "Date " + item.ScheduleTime.ToString("dd-MMM-yyyy") + " Time " + item.ScheduleTime.ToString("HH:mm");
                            }
                            @*@item.ScheduleTime.ToString("dd-MMM-yyyy HH:mm")*@
                            @time
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterviewStatus)
                        </td>


                        <td style="text-align:center">
                            <a class="btn btn-info glyphicon glyphicon-edit" href="@Url.Action("Edit","Interview",new { id = @item.Id})"></a>
                        </td>
                        <td style="text-align:center">
                            <a class="btn btn-danger glyphicon glyphicon-trash delete-prompt" id="@item.Id" data-toggle="modal" data-target="#exampleModalCenter" data-whatever="@item.Employee"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var deleteUrl = '@Url.Action("DeleteConfirm", "Interview")';
</script>
