@model EmployeeMangmentSystem.Repository.Models.Skills

@{
    if (Model.Id == Guid.Empty)
    {
        ViewBag.Title = "Add Skill";
    }
    else
    {
        ViewBag.Title = "Edit Skill";
    }
}
<div class="x_panel">
    <div class="x_title">
        <h2>
            @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
            {
                @ViewBag.Title
            }
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        @using (Html.BeginForm("Create", "Skill", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @*     <h4>RegisterViewModel</h4>*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @if (Model.Id == Guid.Empty)
                        {
                            <div class="col-md-2">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2">
                                <input type="submit" value="Update" class="btn btn-primary" />
                            </div>
                        }

                        <div class="col-md-2">
                            <a href="@Url.Action("Index","Skill")" class="btn btn-success">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
