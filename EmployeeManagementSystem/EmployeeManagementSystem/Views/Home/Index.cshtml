<div class="row" style="margin:25px">
    <div class="col-lg-12">
        @if (Model.IsBreakIn && Model.IsClockIn)
        {
            using (Html.BeginForm("BrakeOut", "home", FormMethod.Post, new { @class = "col-lg-6", role = "form" }))
            {
                <button type="submit" class="btn btn-primary">Break out</button>
            }
        }
        else
        {
            if (Model.IsClockIn)
            {
                using (Html.BeginForm("BrakeIn", "Home", FormMethod.Post, new { @class = "col-lg-6", role = "form" }))
                {
                    <button type="submit" class=" btn btn-primary">Break In</button>
                }
            }
        }


        @if (Model.IsClockIn)
        {
            if (!Model.IsBreakIn)
            {
                using (Html.BeginForm("ClockOut", "Home", FormMethod.Post, new { @class = "col-lg-6", role = "form" }))
                {
                    <button type="submit" class=" btn btn-primary">Clock Out</button>
                }
            }
        }
        else
        {

            using (Html.BeginForm("ClockIn", "Home", FormMethod.Post, new { @class = "col-lg-6", role = "form" }))
            {
                <button type="submit" class=" btn btn-primary">Clock In</button>
            }

        }
    </div>
</div>