<link href="~/Content/toastr.min.css" rel="stylesheet" />
@Scripts.Render("~/bundles/custom")
<script type='text/javascript'>

    //Alerts your TempData value (you could also use the Session or your rno value here
         var a = '@(TempData["sucess"])';

    if (a != '') {
        toastify("success", a);
        @TempData["sucess"] = "";
    }
    var b = '@(TempData["error"])'; 
    if (b != '') {
            toastify("error", b);
        @TempData["error"] = "";
    }
    var c = '@(TempData["info"])'; 
    if (c != '') { 
        toastify("info", c);
        TempData["info"] = "";
    }
    
    var c = '@(TempData["warning"])';
    if (c != '') {
        toastify("warning", c);
        @TempData["warning"] = "";
    }
</script>