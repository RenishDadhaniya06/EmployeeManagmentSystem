@using EmployeeMangmentSystem.Resources
@using EmployeeManagementSystem.Helper
<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="@Url.Action("Index", "Home")" class="site_title"> <span>Employee Managment System</span></a>
        </div>
        <div class="clearfix"></div>
        <!-- menu profile quick info -->
        <!-- /menu profile quick info -->
        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                @if (CommonHelper.CurrentRoleName() == "Employee")
                {
                    <ul class="nav side-menu">
                        <li><a href="@Url.Action("Index","Project")"><i class="fa fa-tasks"></i>@ProjectResources.name</a></li>
                    </ul>
                }
                else if (CommonHelper.CurrentRoleName() == "Sales")
                {
                    <ul class="nav side-menu">

                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Reports <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Resource")"> <i class="fa fa-file"></i>Skill Report</a></li>
                            </ul>
                        </li>

                    </ul>
                }
                else if (CommonHelper.CurrentRoleName() == "HR")
                {
                    <ul class="nav side-menu">

                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Administrator <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Notification")">@NotificationResources.name</a></li>
                                <li><a href="@Url.Action("Index", "Department")">@DepartmentResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Designation")">@DesignationResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Skill")">@SkillsResources.name</a></li>
                            </ul>
                        </li>

                        <li><a href="@Url.Action("Index", "Employee")"><i class="fa fa-user-circle-o"></i>@EmployeeResources.Name</a></li>



                    </ul>

                }
                else if (CommonHelper.CurrentRoleName() == "PM")
                {
                    <ul class="nav side-menu">
                        <li><a href="@Url.Action("Index", "Employee")"><i class="fa fa-user-circle-o"></i>@EmployeeResources.Name</a></li>
                        <li><a href="@Url.Action("Index","Project")"><i class="fa fa-tasks"></i>@ProjectResources.name</a></li>
                    </ul>
                }
                else if (CommonHelper.CurrentRoleName() == "Admin")
                {
                    <ul class="nav side-menu">

                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Administrator <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Notification")">@NotificationResources.name</a></li>
                                <li><a href="@Url.Action("Index", "Department")">@DepartmentResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Designation")">@DesignationResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Skill")">@SkillsResources.name</a></li>
                            </ul>
                        </li>

                        <li><a href="@Url.Action("Index", "Employee")"><i class="fa fa-user-circle-o"></i>@EmployeeResources.Name</a></li>
                        <li><a href="@Url.Action("Index","Project")"><i class="fa fa-tasks"></i>@ProjectResources.name</a></li>
                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Reports <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Resource")"> <i class="fa fa-file"></i>Skill Report</a></li>
                            </ul>
                        </li>


                    </ul>
                }
                else if (CommonHelper.IsSuperAdmin())
                {
                    <ul class="nav side-menu">

                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Administrator <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Notification")">@NotificationResources.name</a></li>
                                <li><a href="@Url.Action("Index", "Department")">@DepartmentResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Designation")">@DesignationResources.Name</a></li>

                                <li><a href="@Url.Action("Index", "Skill")">@SkillsResources.name</a></li>
                            </ul>
                        </li>

                        <li><a href="@Url.Action("Index", "Employee")"><i class="fa fa-user-circle-o"></i>@EmployeeResources.Name</a></li>
                        <li><a href="@Url.Action("Index","Project")"><i class="fa fa-tasks"></i>@ProjectResources.name</a></li>
                        <li>
                            <a><i class="fa fa-bar-chart-o"></i> Reports <span class="fa fa-chevron-down"></span></a>
                            <ul class="nav child_menu">
                                <li><a href="@Url.Action("Index","Resource")"> <i class="fa fa-file"></i>Skill Report</a></li>
                            </ul>
                        </li>


                    </ul>
                }



            </div>
        </div>
        <!-- /sidebar menu -->
        <!-- /menu footer buttons -->
        <div class="sidebar-footer hidden-small">
            @if (CommonHelper.CurrentRoleName() == "Admin")
            {
                <a data-toggle="tooltip" data-placement="top" title="Settings" href="@Url.Action("Create", "Setting")">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                </a>

                <a data-toggle="tooltip" data-placement="top" title="My Profile" href="@Url.Action("Profile","User")">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                </a>

                <a data-toggle="tooltip" data-placement="top" title="Dashboard" href="@Url.Action("Index","Dashboard")">
                    <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
                </a>

                <a data-toggle="tooltip" data-placement="top" title="Logout" href="@Url.Action("LogOff", "Account")">
                    <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                </a>
            }
        </div>
        <!-- /menu footer buttons -->
    </div>
</div>