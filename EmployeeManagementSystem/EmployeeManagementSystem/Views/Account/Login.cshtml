
@using EmployeeManagementSystem.Models
@model LoginViewModel
@{
    /**/

    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/nprogress.css" rel="stylesheet" />
<link href="~/Libs/Gentelella/css/custom.min.css" rel="stylesheet" />
<link href="~/Content/common.css" rel="stylesheet" />


<body class="login">
    <div>
        <div class="loader" id="AjaxLoader" style="display:none;">
            <div class="strip-holder">
                <div class="strip-1"></div>
                <div class="strip-2"></div>
                <div class="strip-3"></div>
            </div>
        </div>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @if (!string.IsNullOrEmpty(ViewBag.message))
                    {
                        <p class="text-success">@ViewBag.message</p>
                    }
                    <div>
                        <h1>Employee Managment System</h1>
                    </div>

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Login</h1>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>

                        <div>
                            <button class="btn btn-default submit" type="submit" onclick="return foo();">Log in</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">

                            <div class="clearfix"></div>
                            <br />
                            <div>

                                <p>  2019-2020 All Rights Reserved To Albiorix Pvt Ltd.</p>
                            </div>
                        </div>
                    }
                </section>
            </div>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/fastclick.js"></script>
    <script src="~/Scripts/nprogress.min.js"></script>
    <script src="~/Libs/Gentelella/js/custom.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script type='text/javascript'>
    //Alerts your TempData value (you could also use the Session or your rno value here
         var a = '@(TempData["sucess"])';

    if (a != '') {
        toastify("success", a);
    }
    var b = '@(TempData["error"])';
    if (b != '') {
            toastify("error", b);
    }
    var c = '@(TempData["info"])';
    if (c != '') {
        toastify("info", c);
    }

    var c = '@(TempData["warning"])';
    if (c != '') {
        toastify("warning", c);
        }

        function foo() {
            $('#AjaxLoader').show();
            return true;
        }

        $('#AjaxLoader').show();

        function showPageLoadingSpinner() {
            $('#AjaxLoader').show();
        }
        $(document).ready(function () {
            console.log("Document");
            $('#AjaxLoader').hide();
        });
        window.onload = function () {
            console.log("window");
            $('#AjaxLoader').hide();
            //Delay just used for example and must be set to 0.
        };
    </script>
</body>
