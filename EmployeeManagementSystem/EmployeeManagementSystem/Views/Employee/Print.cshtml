@model IEnumerable<EmployeeMangmentSystem.Repository.Models.Employee>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <style type="text/css">

        .tftable {
            width: 100%;
            border-width: 1px;
            border-collapse: collapse;
        }

            .tftable th {
                font-size: 15px;
                font-weight: bold;
                background-color: #acc8cc;
                border-width: 1px;
                padding: 8px;
                border-style: solid;
                text-align: left;
            }
    </style>
    <title>EmployeeS</title>
</head>
<body>

    <table class="tftable" border="1" style="width: 100%;border-style:solid; border-width:1px;" cellpadding="4" cellspacing="4">

        <tbody>
            <tr>
                @*<th>&nbsp;Id</th>*@
                <th>&nbsp;Name</th>
                <th>&nbsp;Phone</th>
                <th>&nbsp;BirthDate</th>
                <th>&nbsp;Address</th>
                
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>&nbsp;@item.Id</td>*@
                    <td>
                        &nbsp;
                        @{
                            var name = item.FirstName + " " + item.MiddleName + " " + item.LastName;
                        }
                        @name
                    </td>
                    <td>&nbsp;@item.Phone</td>
                    <td>&nbsp;@item.BirthDate.ToShortDateString()</td>
                    <td>&nbsp;@item.Address</td>
                    
                </tr>
            }

        </tbody>
    </table>
</body>
</html>
