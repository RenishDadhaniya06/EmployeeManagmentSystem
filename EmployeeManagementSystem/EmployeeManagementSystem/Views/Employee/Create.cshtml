@model EmployeeMangmentSystem.Repository.Models.ViewModel.EmployeeUserViewModel


@{
    ViewBag.Title = "Create Employee";

}
@*<script src="~/Scripts/ckeditor/ckeditor.js"></script>*@

<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/bootstrap-multiselect.js" type="text/javascript"></script>
<script type="text/javascript">

    var j = jQuery.noConflict();
    j(function () {
        j('.skills').multiselect({
            includeSelectAllOption: true
        });
    });
    $(document).ready(function () {
        $('.datepicker').datepicker({
            dateFormat: "dd-MMM-yyyy",
            todayBtn: true,
            todayHighlight: true
        });
    });
</script>


<div class="x_panel">
    <div class="x_title">
        <h2>
            @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
            {
                @ViewBag.Title
            }
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        @using (Html.BeginForm("Create", "Employee", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.Label("Password", new { @class = "control-label col-md-3" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.TextBox("Email", "", new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.Password("Password", "", new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.Label("Department", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.Label("Skill", htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.BirthDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @class = "form-control datepicker" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.DropDownListFor(model => model.Department, new SelectList(ViewBag.Department, "Id", "Name"), "Select Department", new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.DropDownList("Skill", new SelectList(ViewBag.Skills, "Id", "Name"), new { @class = "form-control skills", @multiple = "multiple" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.OtherContact, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.CurrentSalary, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.OtherContact, new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.TextBoxFor(model => model.CurrentSalary, new { @class = "form-control" })
                </div>
                <div class="col-lg-4 form-group">
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-5">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a href="@Url.Action("Index","Employee")" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </div>

        }
    </div>
</div>
